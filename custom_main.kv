            RectangularElevationButton:
                pos_hint: {'center_x':.5, 'center_y':.5}
                id: menu
                md_bg_color: (0,0,0,1)
                size_hint_x: .3
                size_hint_y: .2
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                Button:
                    background_normal: 'button_background.png'
                    color: 0,0,0,1
                    pos: menu.pos
                    size: menu.size
                    halign: 'center'
                    font_size: 20
                    text: "MENU"
                    on_release: root.open_menu()

            RectangularElevationButton:
                pos_hint: {'center_x':.5, 'center_y':.5}
                id: button
                md_bg_color: (0,0,0,1)
                size_hint_x: .3
                size_hint_y: .2
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                Button:
                    background_normal: 'button_background.png'
                    color: 0,0,0,1
                    pos: button.pos
                    size: button.size
                    halign: 'center'
                    font_size: 20
                    text: "BUTTON"

