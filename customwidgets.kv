#This file contains the kivy specification of all custom widgets that can be used in the project


<CustomButton@Button>:
    background_color: app.theme_cls.primary_color
    background_normal: ''

<OptionsDropdown>:
    CustomButton:
        id: snapshot_btn
        text: 'Snapshot'
        size_hint_y: None
        height: 44
    MDRaisedButton:
        id: settings_btn
        text: 'Settings'
        size_hint_y: None
        height: 44
    MDRaisedButton:
        id: history_btn
        text: 'History'
        size_hint_y: None
        height: 44
    MDRaisedButton:
        id: logout_btn
        text: 'Logout'
        size_hint_y: None
        height: 44
    MDRaisedButton:
        id: exit_btn
        text: 'Exit'
        size_hint_y: None
        height: 44
        pos_hint: {'left': 1,'center_y': 0.0}

<DataInput>:
    background_active: ''
    background_normal: ''
    background_color: (1,1,1,1)
    # foreground_color:  app.theme_cls.primary_color
    foreground_color: 0,0,0,1
    size_hint_y: None
    text: "0"
    height: self.minimum_height
    canvas.after:
        Color:
            # rgba: app.theme_cls.primary_color
            rgba: (0,0,0,1)
        # Rectangle:
        #     pos: self.pos
        #     size: (self.size[0],2)
        # Rectangle:
        #     pos: self.pos
        #     size: (2, self.size[1])
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)

<ToolBarSpace@MDBoxLayout>:
    adaptive_height: True
    md_bg_color: app.theme_cls.primary_color
    Image:
        source: 'logo.png'
        size_hint_x: .1
