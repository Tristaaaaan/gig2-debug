            #     MDLabel:
            #         text: 'COORDONNATE'
            #         size_hint_y: .1
            #         halign: 'center'

            RectangularElevationButton:
                pos_hint: {'center_x':.5, 'center_y':.5}
                id: open_coordonnate
                md_bg_color: (0,0,0,1)
                size_hint_x: .3
                size_hint_y: .2
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                Button:
                    background_normal: 'button_background.png'
                    color: 0,0,0,1
                    pos: open_coordonnate.pos
                    size: open_coordonnate.size
                    halign: 'center'
                    font_size: 20
                    text: "COORDONNEE"
                    on_release: root.open_coordonnate()
            
            
            
